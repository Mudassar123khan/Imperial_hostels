<% layout("/layouts/boilerplate.ejs") %>

  <div class="row mt-3">
    <div class="col-8 offset-2">
      </div>
    <h3>Listing Details</h3>
    <div class="card col-6 offset-3 show-card">
      <img src="<%=details.image.url%>" class="card-img-top show-img" alt="listing-image">
      <div class="card-body">
        <p class="card-text">
          <%=details.title%><br>
          <%=details.description%><br>
          &#8377;<%=details.price.toLocaleString("en-IN")%><br>
          <%=details.location%><br>
          <%=details.country%>
        </p>
      </div>
    </div>
    <div class="btns">
 <a href="/listings/<%=details._id%>/edit" class="btn btn-dark col-1 offset-3 add-btn">edit</a>
 <form method="POST" action="/listings/<%=details._id%>?_method=DELETE">
            <button class="btn btn-dark offset-4 ">Delete</button>
          </form>
   </div>
     
    </div>
  
